{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "es6",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": ".tmp/",
		"pretty": true,
		"moduleResolution": "node",
		"types": [
			"core-js",
			"jasmine",
			"should"
		]
	},
	"exclude": [
		"node_modules",
		"jspm_packages",
		".tmp",
		"build",
		"docs",
		"*.spec.js",
		"lib/index.js"
	]
}
